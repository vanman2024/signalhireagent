#!/bin/bash

# SignalHire Agent - Fast launcher (no dependency checks)
# Get the actual script location (resolves symlinks)
SCRIPT_PATH="$(readlink -f "${BASH_SOURCE[0]}")"
SCRIPT_DIR="$(dirname "$SCRIPT_PATH")"

# Always use direct Python execution for speed
if [ -f "$SCRIPT_DIR/src/cli/main.py" ]; then
    cd "$SCRIPT_DIR"
    python3 -m src.cli.main "$@"
else
    # Try to use installed package
    python3 -m cli.main "$@" 2>/dev/null || {
        echo "❌ SignalHire Agent not found"
        echo "Please run setup: ./setup.sh"
        exit 1
    }
fi